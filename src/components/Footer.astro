---
import type { Translations } from '../types';

interface Props {
  t: Translations;
}

const { t } = Astro.props;
const currentYear = new Date().getFullYear();
---

<footer class="bg-cyan-dark text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 lg:py-20">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12 mb-12">
      
      <!-- Column 1: Brand -->
      <div class="space-y-6">
        <div>
          <img src="/images/logo-main.png" alt="{t.companyName} Logo" class="h-12 mb-3" />
          <h3 class="text-2xl font-bold text-white mb-2">{t.companyName}</h3>
          <p class="text-white/80 text-sm leading-relaxed">
            {t.footer.slogan}
          </p>
        </div>
        
        <!-- Social Media Icons -->
        <div class="flex items-center gap-4">
          <a href="#" class="w-10 h-10 rounded-lg bg-white/10 hover:bg-[#045a52] flex items-center justify-center transition-colors duration-300">
